---
import Layout from '../layouts/Layout.astro';
import List from "../components/List";
import SwiperGhibli from "../components/Carousel"
import Gallery from "../components/Gallery";
import Slick from "../components/Slick"
import Button from "../components/buttons/Button"
import ButtonNonHydrate from "../components/buttons/ButtonNonHydrate"
const response = await fetch(
  "https://api.eazymock.net/mock/42a5cd6f-404a-429e-96f6-8c720e87b2f1/list-top"
);
const data = await response.json();
const listAPITOP = data.data;

const responseGhibli = await fetch(
  "https://ghibliapi.vercel.app/films"
);
const dataGhibli = await responseGhibli.json();
const ghibliData = dataGhibli;

const responseMU = await fetch(
  "https://api.eazymock.net/mock/42a5cd6f-404a-429e-96f6-8c720e87b2f1/list-mu"
);
const dataMU = await responseMU.json();
const listAPITOPMU = dataMU.data;
---

<Layout title="Welcome to Astro.">
	<div class="boxList">
		<Button/> 
		<ButtonNonHydrate/>
	</div>
	<div class="flex items-center justify-center h-[100px] bg-purple-400 text-white text-[30px]">Normal</div>
	<List data={listAPITOP}/>
	<div class="flex items-center justify-center h-[100px] bg-purple-400 text-white text-[30px]">Anime</div>
	<SwiperGhibli data={ghibliData}/>
	<div class="flex items-center justify-center h-[100px] bg-purple-400 text-white text-[30px]">Soccer Player</div>
	<Gallery data={listAPITOPMU}/>
</Layout>
<style>
	.boxList {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 300px;
		margin: 10px auto;
	}
</style>
